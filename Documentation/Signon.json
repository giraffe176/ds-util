  "id": "signon",
  "openapi": "3.0.3",
  "info": {
    "title": "Sign On",
    "description": "Every API endpoint requires a valid and active Access Token to make API calls. Datasite uses OAuth2 to authenticate access requests. OAuth2 generates an Access Token, a unique string that identifies an authenticated client to the API endpoints, which grants the client permission to access a protected resource. When an Access Token is requested using OAuth 2.0, an Access Token is returned along with a Refresh Token that a client can use to get a new Access Token, without user interaction. Use the Sign On API to get the Access Token you will need to successfully send calls.",
    "version": "2024-04-01",
    "x-datasite-summary": "Authenticate access requests with the Sign On API.",
    "x-datasite-audience-lifecycle-index": [
      {
        "audience": "PUBLIC",
        "lifecycle": "GA"
      }
    ]
  },
  "externalDocs": {
    "description": "More info on how to generate the tokens in various scenarios - SSO, Mobile, etc.",
    "url": "https://github.com/MerrillCorporation/signon-service"
  },
